# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key

# Exa (web search)
EXA_API_KEY=your-exa-api-key

# Obsidian Local REST API
# Get this from the Local REST API plugin settings in Obsidian
OBSIDIAN_API_KEY=your-obsidian-api-key

# Optional: Override defaults (these are set automatically in docker-compose)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# QDRANT_URL=http://localhost:6333
# OBSIDIAN_API_URL=http://localhost:27123

# Optional: Customize behavior
# USER_MESSAGE_DEBOUNCE_MS=2000
# VECTOR_SYNC_INTERVAL_MS=300000
# QDRANT_COLLECTION=obsidian-notes
