# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (for embeddings via @ai-sdk/openai)
OPENAI_API_KEY=your-openai-api-key

# ElevenLabs (voice TTS + Scribe STT)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Exa (web search)
EXA_API_KEY=your-exa-api-key

# Twilio (voice calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Voice
VOICE_SERVER_URL=https://your-server.ngrok.io
VOICE_USER_ID=123456789
VOICE_USER_PHONE=+1234567890

# ngrok (Docker Compose tunnel)
NGROK_AUTHTOKEN=your-ngrok-authtoken
NGROK_DOMAIN=your.ngrok.domain

# Vault (path to markdown notes directory)
VAULT_PATH=./vault

# Optional: Override defaults (these are set automatically in docker-compose)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# QDRANT_URL=http://localhost:6333

# Optional: Customize behavior
# USER_MESSAGE_DEBOUNCE_MS=2000
# QDRANT_COLLECTION=obsidian-notes
# VAULT_EXCLUDE_PATTERNS=.obsidian,Templates,*.sync-conflict-*

# Logging
# LOG_LEVEL=debug
# LOG_PRETTY=true
# LOG_FILE=true
# LOG_DIR=./logs
