{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",

      "mcp__exa__web_search_exa",
      "mcp__exa__get_code_context_exa"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run lint"
          }
        ]
      }
    ]
  }
}
