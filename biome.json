{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/node_modules",
      "!**/.agents",
      "!**/.claude",
      "!**/.github",
      "!**/obsidian-config"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "noDefaultExport": "error",
        "useTemplate": "error",
        "noMagicNumbers": "error",
        "useImportType": "off"
      },
      "complexity": {
        "noUselessConstructor": "off",
        "noStaticOnlyClass": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["lint-staged.config.ts"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.test.ts", "**/test/**"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off",
            "noMagicNumbers": "off"
          },
          "complexity": {
            "useLiteralKeys": "off"
          }
        }
      }
    }
  ],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": true,
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
